<h2>選択</h2>
<div id="text_s"></div>
<h2>解答</h2>
<div id="text_a"></div>
</div>

<script type="text/javascript">
//問題と解答
qa = new Array();
qa[0] = ["大陸移動説を唱えた人","マルコポーロ","カント","エラトステネス","ウェゲナー",4];
