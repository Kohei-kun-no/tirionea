qa[7] = ["鉄鋼（粗銅）の生産量世界1位","中国","インド","日本","アメリカ",1];
qa[8] = ["輸出貿易額世界2位の国（2015年）","日本","アメリカ","ドイツ","中国",3];
qa[9] = ["都市部に発達する中心業務地区の英名","BCD","CBD","DBC","CDB",2];
