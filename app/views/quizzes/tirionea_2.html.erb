qa[15] = ["イタリアで、熟練した職人の高い技術力を生かした工業を発達させている地域の別名","第一のイタリア","第二のイタリア","第三のイタリア","第四のイタリア",3];
qa[16] = ["アジアで二番目に面積が大きい国","カザフスタン","インド","サウジアラビア","インドネシア",2];
qa[17] = ["南北アメリカで最も面積が大きい国","カナダ","アメリカ","ブラジル","アルゼンチン",1];
qa[18] = ["大阪の在留外国人数で最も多い国籍","中国","ブラジル","韓国","アメリカ",3];
qa[19] = ["インディオと白人の混血","ムラート","メスチーノ","オスチーノ","カナート",2];




q_sel = 4; //選択肢の数

setReady();

//初期設定
function setReady() {
   count = 0; //問題番号
   ansers = new Array(); //解答記録
   
   //最初の問題
   quiz();
}

//問題表示
function quiz() {
   //問題
   document.getElementById("text_q").innerHTML = (count + 1) + "問目：" + qa[count][0];
   //選択肢
   s = "";
   for (n=1;n<=q_sel;n++) {
       s += "【<a href='javascript:anser(" + n + ")' >" + n + "：" + qa[count][n] + "</a>】";
   }
   document.getElementById("text_s").innerHTML = s;
}

//解答表示
function anser(num) {
   var s;
   s = (count + 1) + "問目：";
   //答え合わせ
   if (num == qa[count][q_sel + 1]) {
       //正解
       s += "○" + qa[count][num];
       ansers[count] = "○";
   } else {
       s += "×" + qa[count][num];
       ansers[count] = "×";
   }
   document.getElementById("text_a").innerHTML = s;
   //次の問題を表示
   count++;
   if (count < qa.length) {
   quiz();
   } else {
       //終了
       s = "<table border='2'><caption>成績発表</caption>";
       //1行目
       s += "<tr><th>問題</th>";
       for (n=0;n<qa.length;n++) {
           s += "<th>" + (n+1) + "</th>";
       }
       s += "</tr>";
       //2行目
       s += "<tr><th>成績</th>";
       for (n=0;n<qa.length;n++) {
           s += "<td>" + ansers[n] + "</td>";
       }
       s += "</tr>";
       s += "</table>";
       document.getElementById("text_q").innerHTML = s;
       //次の選択肢
       s = "【<a href='javascript:history.back()'>前のページに戻る</a>】";
       s += "【<a href='javascript:setReady()'>同じ問題を最初から</a>】";
       s += "【<a href='answer_2'>解答をみる</a>】";
       s += "【<a href='tirionea_3'>次の問題へ</a>】";
       document.getElementById("text_s").innerHTML = s;
   }
}
</script>
