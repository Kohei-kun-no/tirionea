qa[6] = ["砂糖の生産量世界1位","タイ","ブラジル","中国","インド",2];
qa[7] = ["自動車の生産量世界2位","アメリカ","日本","中国","ドイツ",1];
qa[8] = ["商船船腹量の世界1位の国（地域）","リベリア","香港","パナマ","マーシャル諸島",3];
qa[9] = ["出生率世界1位の国（2015年）","ナイジェリア","コンゴ民主共和国","アルジェリア","エチオピア",2];
qa[10] = ["中国国内に住むチベット族やモンゴル族が主に信仰している宗教","ラマ教","仏教","道教","イスラム教",1];
qa[11] = ["次のうち、ASEAN結成時の加盟国","ブルネイ","シンガポール","ベトナム","ミャンマー",2];
